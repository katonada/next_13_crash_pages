{
  "extends": "next/core-web-vitals",
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    // we want to force semicolons
    "semi": [
      "error",
      "always"
    ],
    // we use 4 spaces to indent our code
    "indent": [
      "error",
      4
    ],
    // we want to avoid extraneous spaces
    "no-multi-spaces": [
      "error"
    ],
    "react/no-unescaped-entities": 0
  }
}
